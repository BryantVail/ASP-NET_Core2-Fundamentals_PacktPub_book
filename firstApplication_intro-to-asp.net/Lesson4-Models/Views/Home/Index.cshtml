<table border="1">
    <thead>
        <tr>
            <th>Product Name</th>
            <th>Price</th>
        </tr>
    </thead>
    @foreach (var Product in Model.Products)
    {
        <tr>
            <td>@Product.Name</td>
            <td>@Product.Price</td>
        </tr>
    }
    <tr>
        <td><strong>Discount</strong></td>
        <td><strong>@Model.Discount</strong></td>
    </tr>
    <tr>
        <td><strong>Total</strong></td>
        <td><strong>@(Model.Total - Model.Discount)</strong></td>
    </tr>
</table>

